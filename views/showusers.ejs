<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table,th,tr{
            border: 1px solid black;
        }
    </style>
</head>
<body>
   <form action="/user/post">
    <button>New User</button>
   </form>
    <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
        </tr>

        <% for(result of results) { %>

            <tr>
                <td> <%=result.id%></td>
                <td><%=result.username%></td>
                <td><%=result.email%></td>
                <td><form action="/user/<%=result.id %>/edit" method="get">
                    <button>Edit username</button>
                </form></td>
                <td> <form action="/user/<%=result.id %>/delete" method="get">
                    <button>Delete</button>
                </form></td>
                
            </tr>
        <% } %>
        
    </table>
</body>
</html>

